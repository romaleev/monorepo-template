{
	"name": "monorepo-template",
	"version": "1.0.0",
	"description": "Monorepo Template",
	"main": "server/dist/index.js",
	"private": true,
	"scripts": {
		"start": "trap 'pnpm on:stop' EXIT INT TERM && npm-run-all --parallel start:client start:server",
		"start:client": "pnpm -F client start",
		"start:server": "pnpm -F server start",
		"build": "npm-run-all --parallel build:*",
		"build:client": "pnpm -F client run build",
		"build:server": "pnpm -F server run build",
		"on:stop": "echo Clean on exit",
		"docker:init": "(docker info | grep 'Swarm: active' || docker swarm init)",
		"docker:deploy": "docker stack deploy -c common/docker/docker-stack.yml monorepo-template",
		"docker:build": "docker buildx bake --file common/docker/docker-bake.hcl",
		"docker:rm": "docker stack rm monorepo-template",
		"docker:status": "docker service ls",
		"docker:logs": "docker service ls --format '{{.Name}}' | grep '^monorepo-template_' | xargs -n1 -P4 docker service logs --follow --tail 100",
		"docker:prune": "docker system prune -af && docker volume prune -f",
		"test": "npm-run-all --parallel test:client test:server test:e2e",
		"test:client": "pnpm -F client run test:run",
		"test:server": "pnpm -F server run test:run",
		"test:watch": "npm-run-all --parallel test:watch:*",
		"test:watch:client": "pnpm -F client run test:watch",
		"test:watch:server": "pnpm -F server run test:watch",
		"test:coverage": "npm-run-all --parallel test:client:coverage test:server:coverage",
		"test:coverage:client": "pnpm -F client test:coverage",
		"test:coverage:server": "pnpm -F server test:coverage",
		"test:e2e": "npm-run-all --parallel test:e2e:*",
		"test:e2e:local": "pnpm exec playwright test --project=local",
		"test:e2e:docker": "pnpm exec playwright test --project=docker",
		"lint": "tsc && eslint {client,server,common}/**/*.ts && prettier {client,server,common}/**/*.ts",
		"lint:fix": "tsc && eslint --fix {client,server,common}/**/*.ts && prettier --write {client,server,common}/**/*.ts",
		"update": "pnpm add npm-check-updates@latest -D -w && ncu --root -ws -u && pnpm i && pnpm audit fix && pnpm lint && pnpm test",
		"prepare": "husky && npm run docker:init && playwright install"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/romaleev/monorepo-template.git"
	},
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"keywords": [
		"monorepo-template",
		"react",
		"docker",
		"node.js",
		"typescript",
		"monorepo",
		"vite",
		"playwright",
		"i18next"
	],
	"author": "Roman Malieiev <aromaleev@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/romaleev/monorepo-template/issues"
	},
	"homepage": "https://github.com/romaleev/monorepo-template#readme",
	"devDependencies": {
		"@eslint/js": "^9.30.0",
		"@playwright/test": "^1.53.1",
		"@types/eslint-config-prettier": "^6.11.3",
		"dotenv": "^17.0.0",
		"eslint": "^9.30.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.2.0",
		"husky": "^9.1.7",
		"npm-check-updates": "^18.0.1",
		"npm-run-all": "^4.1.5",
		"playwright": "^1.53.1",
		"prettier": "^3.6.2",
		"prettier-plugin-organize-imports": "^4.1.0",
		"typescript-eslint": "^8.35.0",
		"vitest": "^3.2.4"
	}
}
