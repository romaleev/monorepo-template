{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.cache/tsconfig.client.tsbuildinfo",
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"noEmit": false,
		"allowImportingTsExtensions": false
	},
	"include": [
		"client/src/**/*.{ts,tsx}",
		"common/**/*.ts"
	],
	"exclude": [
		"client/src/**/*.spec.{ts,tsx}",
		"common/e2e/**/*.spec.ts"
	]
}
