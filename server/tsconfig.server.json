{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"noEmit": false,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
		"../common/**/*.ts"
	],
	"exclude": [
		"src/**/*.spec.ts",
		"../common/e2e/**/*.spec.ts"
	],
	"tsc-alias": {
		"verbose": false,
		"resolveFullPaths": true
	}
}
