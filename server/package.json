{
	"name": "server",
	"version": "1.0.0",
	"main": "dist/index.js",
	"private": true,
	"scripts": {
		"start": "NODE_ENV=development tsx --watch src/index.ts",
		"build": "tsc --project tsconfig.server.json && tsc-alias --project tsconfig.server.json",
		"prod": "NODE_ENV=production node /app/server/dist/server/src/index.js",
		"test:run": "vitest run",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest run --coverage"
	},
	"type": "module",
	"devDependencies": {
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/node": "^24.0.7",
		"@types/pg": "^8.15.4",
		"@types/supertest": "^6.0.3",
		"jiti": "^2.4.2",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.0"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^17.0.0",
		"express": "^5.1.0",
		"i18next": "^25.2.1",
		"pino": "^9.7.0",
		"pino-pretty": "^13.0.0",
		"supertest": "^7.1.1",
		"uuid": "^11.1.0",
		"wait-on": "^8.0.3",
		"zod": "^3.25.67"
	}
