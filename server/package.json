{
	"name": "monorepo-template-server",
	"version": "1.0.0",
	"main": "dist/index.js",
	"private": true,
	"scripts": {
		"start": "NODE_ENV=development node --no-warnings=ExperimentalWarning --watch --import=tsx src/index.ts",
		"build": "tsc --project tsconfig.server.json && tsc-alias --project tsconfig.server.json",
		"prod": "NODE_ENV=production node /app/server/dist/server/src/index.js",
		"test": "jest --no-watchman --maxWorkers=80% --detectOpenHandles",
		"test:watch": "jest --watch --maxWorkers=80%",
		"test:coverage": "jest --coverage"
	},
	"type": "module",
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.1",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.14.0",
		"@types/pg": "^8.11.11",
		"@types/supertest": "^6.0.3",
		"jest": "^29.7.0",
		"jiti": "^2.4.2",
		"ts-jest": "^29.3.1",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.13",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.29.0"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"express": "^5.1.0",
		"i18next": "^24.2.3",
		"pino": "^9.6.0",
		"pino-pretty": "^13.0.0",
		"supertest": "^7.1.0",
		"uuid": "^11.1.0",
		"wait-on": "^8.0.3",
		"zod": "^3.24.2"
	}
}
