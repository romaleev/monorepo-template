{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"noEmit": false,
		"allowImportingTsExtensions": false
	},
	"include": [
		"server/src/**/*.ts",
		"common/**/*.ts"
	],
	"exclude": [
		"server/src/**/*.spec.ts",
		"common/e2e/**/*.spec.ts"
	],
	"tsc-alias": {
		"verbose": false,
		"resolveFullPaths": true
	}
}
